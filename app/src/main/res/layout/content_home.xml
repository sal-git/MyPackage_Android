<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_main_home"
    android:orientation="vertical"
    tools:showIn="@layout/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <view
        android:layout_width="match_parent"
        class="android.support.v4.widget.Space"
        android:id="@+id/view3"
        android:layout_height="80dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:columnCount="2"
        android:elevation="50dp">

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="123dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.29"
            android:elevation="21dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_home_user_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.06"
                    android:gravity="center_vertical"
                    android:text="MyPackage"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.63"
                    card_view:srcCompat="@drawable/box_main_cardview_home" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_home_website"
            android:layout_width="120dp"
            android:layout_height="123dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.29"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    card_view:srcCompat="@drawable/rsz_1browser" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="WEB"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:columnCount="2"
        android:elevation="50dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_gps"
            android:layout_width="120dp"
            android:layout_height="123dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track Package"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="69dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/map_location" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_scanner"
            android:layout_width="200dp"
            android:layout_height="122dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="82dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/scanner" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Package"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal|bold" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_viewpackages"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.11"
        android:elevation="7dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/rsz_server_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <com.github.library.bubbleview.BubbleTextView
                    android:id="@+id/bubbleTextView_home_cloud_packages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    app:angle="8dp"
                    app:arrowCenter="true"
                    app:arrowHeight="10dp"
                    app:arrowLocation="left"
                    app:arrowPosition="14dp"
                    app:arrowWidth="8dp"
                    app:bubbleColor="#7EC0EE" />

                <com.github.library.bubbleview.BubbleTextView
                    android:id="@+id/bubbleTextView_home_local_packages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.39"
                    android:padding="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:angle="8dp"
                    app:arrowCenter="true"
                    app:arrowHeight="10dp"
                    app:arrowLocation="right"
                    app:arrowPosition="14dp"
                    app:arrowWidth="8dp"
                    app:bubbleColor="#7EC0EE" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_home_server"
                android:layout_width="57dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                card_view:srcCompat="@drawable/localserver" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>